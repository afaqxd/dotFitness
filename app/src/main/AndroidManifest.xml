<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dotfitness">

    <application
        android:allowBackup="true"
        android:icon="@drawable/img_appicon2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.DotFitness">
        <activity android:name=".WallpapersActivity"></activity>
        <activity android:name=".ShowDietPlansActivity" />
        <activity android:name=".WeightLossActivity" />
        <activity android:name=".WeightGainActivity" />
        <activity android:name=".MeditationTimerActivity" />
        <activity android:name=".TimerActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".SignupActivity" />
        <activity android:name=".BmiActivity" />
        <activity android:name=".ExercisesActivity" />
        <activity android:name=".SplashScreen" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>